<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.virtz.www.cfcmob.activity.IniciarAulaActivity"
    tools:showIn="@layout/activity_iniciar_aula">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/txtDataAula"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtIdCondutor"
        android:inputType="number"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtMatricula"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Digite a matrÃ­cula do aluno:"
        android:id="@+id/txtMatricula"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/txtDataAula"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:id="@+id/btnIniciarAula"
        android:onClick="iniciarAula"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="114dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edtIdCondutor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Qual categoria?"
        android:id="@+id/txtTipoAula"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/edtIdCondutor" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comboCategoria"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/edtIdCondutor"
        android:layout_alignParentStart="false"
        android:layout_marginTop="10dp" />


</RelativeLayout>
